{% doc %}
  @prompt
    collection grid
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-collection-grid-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-grid-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-collection-grid-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px 0;
    font-weight: 600;
  }

  .ai-collection-grid-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-collection-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_top_spacing }}px;
  }

  .ai-collection-grid-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-collection-grid-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-grid-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-collection-grid-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-collection-grid-image-wrapper-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-grid-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-grid-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,{{ block.settings.overlay_opacity }}) 100%);
    opacity: {{ block.settings.overlay_strength }};
  }

  .ai-collection-grid-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-collection-grid-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_title_size }}px;
    color: {{ block.settings.collection_title_color }};
    margin: 0 0 8px 0;
    font-weight: 600;
  }

  .ai-collection-grid-product-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_count_size }}px;
    color: {{ block.settings.product_count_color }};
    margin: 0;
  }

  .ai-collection-grid-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collection-grid-empty-message-{{ ai_gen_id }} {
    font-size: 16px;
    margin-top: 20px;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-collection-grid-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-collection-grid-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<collection-grid-{{ ai_gen_id }}
  class="ai-collection-grid-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-collection-grid-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-grid-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-collection-grid-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collections != blank %}
      <div class="ai-collection-grid-items-{{ ai_gen_id }}">
        {% for collection in block.settings.collections %}
          <div class="ai-collection-grid-item-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collection-grid-link-{{ ai_gen_id }}">
              <div class="ai-collection-grid-image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% else %}
                  {{ 'collection-1' | placeholder_svg_tag }}
                {% endif %}
                {% if block.settings.show_overlay %}
                  <div class="ai-collection-grid-overlay-{{ ai_gen_id }}"></div>
                {% endif %}
              </div>
              <div class="ai-collection-grid-content-{{ ai_gen_id }}">
                <h3 class="ai-collection-grid-collection-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                {% if block.settings.show_product_count %}
                  <p class="ai-collection-grid-product-count-{{ ai_gen_id }}">
                    {{ collection.products_count }}
                    {% if collection.products_count == 1 %}
                      product
                    {% else %}
                      products
                    {% endif %}
                  </p>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-collection-grid-empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p class="ai-collection-grid-empty-message-{{ ai_gen_id }}">
          Next, select collections to display
        </p>
      </div>
    {% endif %}
  </div>
</collection-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const links = this.querySelectorAll('.ai-collection-grid-link-{{ ai_gen_id }}');
        links.forEach(link => {
          const title = link.querySelector('.ai-collection-grid-collection-title-{{ ai_gen_id }}');
          if (title) {
            link.setAttribute('aria-label', 'View ' + title.textContent.trim() + ' collection');
          }
        });
      }
    }

    customElements.define('collection-grid-{{ ai_gen_id }}', CollectionGrid{{ ai_gen_id }});
  })();
</script>

