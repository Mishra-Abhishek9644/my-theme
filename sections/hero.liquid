<section
  class="relative w-full h-[50vh] md:h-[70vh] lg:h-[90vh] overflow-hidden"
  data-hero-carousel
>
  {% for block in section.blocks %}
    <div
      class="
        absolute inset-0 transition-all duration-1000 ease-out
        {% if forloop.first %}
          opacity-100 scale-100 z-10 pointer-events-auto
        {% else %}
          opacity-0 scale-105 z-0 pointer-events-none
        {% endif %}
      "
      data-hero-slide
    >
      <!-- Background Image -->
      {% if block.settings.bg_image != blank %}
        <img
          src="{{ block.settings.bg_image | image_url: width: 5000 }}"
          alt="Hero image"
          class="w-full h-full object-cover"
          height=""
          width=""
        >
      {% endif %}

      <!-- Content -->
      <div class="absolute inset-0 flex items-center ">
        <div class="max-w-xl px-6 text-black">
          <h3 class="text-lg md:text-xl mb-4">
            {{ block.settings.topheading }}
          </h3>

          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            {{ block.settings.heading }}
          </h1>

          <p class="text-gray-700 text-lg md:text-xl mb-6">
            {{ block.settings.subheading }}
          </p>

          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_link }}"
              class="inline-block bg-black hover:bg-[#3e5f4f] text-white rounded-sm px-6 py-3 font-medium"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
<!-- Dots Navigation -->
<div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-3 z-20">
  {% for block in section.blocks %}
    <button
      class="
        hero-dot w-3 h-3 rounded-full border border-black
        transition-all duration-300 hover:scale-125
        {% if forloop.first %} bg-black {% else %} bg-transparent {% endif %}
      "
      data-slide="{{ forloop.index0 }}"
    ></button>
  {% endfor %}
</div>


</section>
{% schema %}
{
  "name": "Hero Carousel",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "slide",
      "name": "Hero Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background image"
        },
        {
          "type": "text",
          "id": "topheading",
          "label": "Top heading",
          "default": "Essential Items"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Main heading",
          "default": "Beauty Inspired by Real Life"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Made Using clean, non-toxic ingredients, our product are designed for everyone"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Carousel"
    }
  ]
}
{% endschema %}
