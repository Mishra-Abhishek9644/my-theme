<section class="bg-white px-6 lg:px-16 py-16">
  <div class="max-w-6xl mx-auto">

    <h1 class="text-4xl font-semibold mb-12">
      {{ blog.title }}
    </h1>

    {% if blog.articles === 0 %}
        <div>No Articles Has Been Published</div>
        {% endif %}
    <div class="grid md:grid-cols-3 gap-10">
      {% for article in blog.articles %}
        <a href="{{ article.url }}" class="group block">

          {% if article.image %}
            <img
              src="{{ article.image | image_url: width: 800 }}"
              class="w-full h-60 object-cover rounded-lg mb-4"
              alt="{{ article.title }}"
              height=""
              width=""
            >
          {% endif %}

          <h2 class="text-xl font-semibold group-hover:underline">
            {{ article.title }}
          </h2>

          <p class="text-sm text-gray-500 mt-2">
            {{ article.published_at | date: "%B %d, %Y" }}
          </p>

        </a>
      {% endfor %}
    </div>

  </div>
</section>
