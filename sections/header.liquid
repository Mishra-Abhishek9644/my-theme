<!-- Top Promo Bar -->
<div class="flex justify-center bg-[#4d7560] text-white p-2 text-sm">
  <p>Free Shipping on all orders â‚¹999+</p>
</div>

<!-- Header Main -->
<div class="header-main grid grid-cols-[auto_1fr_auto] md:grid-cols-[1fr_auto_1fr] items-center px-6 py-4 bg-white">

  <!-- Hamburger (mobile only) -->
  <button
    id="mobile-menu-open"
    class="md:hidden text-2xl"
    aria-label="Open menu"
  >
    â˜°
  </button>

  <!-- Desktop Navigation -->
  <nav class="hidden md:flex gap-6 justify-self-start">
    {% for link in linklists['main-menu'].links %}
      <a href="{{ link.url }}" class="text-gray-700 font-medium hover:underline">
        {{ link.title }}
      </a>
    {% endfor %}
  </nav>

  <!-- Logo (centered) -->
  <div class="flex justify-center">
    {% if section.settings.logo != blank %}
      <img
        src="{{ section.settings.logo | image_url: width: 200 }}"
        class="h-10"
        alt="{{ shop.name }}"
      />
    {% else %}
      <span class="text-xl font-bold">{{ shop.name }}</span>
    {% endif %}
  </div>

  <!-- Icons -->
  <div class="flex gap-4 justify-self-end">
    <a href="#" aria-label="Search">ğŸ”</a>
    <a href="/account" aria-label="Account">ğŸ‘¤</a>
    <a href="/cart" aria-label="Cart">
      ğŸ›’ ({{ cart.item_count }})
    </a>
  </div>

</div>
<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 bg-black/40 hidden z-50"
>
  <!-- Drawer -->
  <div class="bg-white w-4/5 max-w-sm h-full p-6">

    <!-- Close button -->
    <button
      id="mobile-menu-close"
      class="text-2xl mb-6"
      aria-label="Close menu"
    >
      âœ•
    </button>

    <!-- Mobile Navigation -->
    <nav class="flex flex-col gap-4">
      {% for link in linklists['main-menu'].links %}
        <a
          href="{{ link.url }}"
          class="text-lg font-medium text-gray-800"
        >
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

  </div>
</div>
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    }
  ]
}
{% endschema %}
