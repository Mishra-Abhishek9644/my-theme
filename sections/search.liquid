<section class="px-4 sm:px-6 py-12 max-w-5xl mx-auto">

  <h1 class="text-2xl font-semibold mb-8">
    Search Results for "{{ search.terms }}"
  </h1>

  {% if search.results_count > 0 %}

    <!-- ✅ Smaller Responsive Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">

      {% for item in search.results %}
        {% if item.object_type == 'product' %}

          <!-- ✅ Smaller Card -->
          <a
            href="{{ item.url }}"
            class="group border rounded-lg overflow-hidden shadow-sm hover:shadow-md transition bg-white"
          >

            <!-- ✅ Smaller Image Box -->
            <div class="w-full aspect-square bg-gray-100 overflow-hidden">
              {% if item.featured_image %}
                <img
                  src="{{ item.featured_image | image_url: width: 400 }}"
                  alt="{{ item.title | escape }}"
                  class="w-full h-full object-content group-hover:scale-105 transition duration-300"
                  loading="lazy"
                  height=""
                  width=""
                >
              {% endif %}
            </div>

            <!-- ✅ Compact Info -->
            <div class="p-2 py-4 text-center">
              <p class="text-md font-medium text-black truncate">
                {{ item.title }}
              </p>

              <p class="text-sm text-gray-600 mt-1">
                {{ item.price | money }}
              </p>
            </div>

          </a>

        {% endif %}
      {% endfor %}

    </div>

  {% else %}
    <p class="text-gray-600 text-lg">
      No results found.
    </p>
  {% endif %}

</section>
