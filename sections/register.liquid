<section class="max-w-md mx-auto py-20 px-6">
  <h1 class="text-3xl font-semibold mb-8 text-center">
    Create Account
  </h1>

  {% form 'create_customer' %}

    <input
      type="text"
      name="customer[first_name]"
      placeholder="First Name"
      class="w-full border px-4 py-3 rounded-md mb-4"
      required
    >

    <input
      type="text"
      name="customer[last_name]"
      placeholder="Last Name"
      class="w-full border px-4 py-3 rounded-md mb-4"
      required
    >

    <input
      type="email"
      name="customer[email]"
      placeholder="Email"
      class="w-full border px-4 py-3 rounded-md mb-4"
      required
    >

    <input
      type="password"
      name="customer[password]"
      placeholder="Password"
      class="w-full border px-4 py-3 rounded-md mb-6"
      required
    >

    <button
      type="submit"
      class="w-full bg-black text-white py-3 rounded-md hover:bg-gray-900"
    >
      Register
    </button>

  {% endform %}

  <p class="text-center mt-6 text-sm text-gray-600">
    Already have an account?
    <a href="{{ routes.account_login_url }}" class="underline">
      Login
    </a>
  </p>
</section>
